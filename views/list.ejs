<!-- to include header -->
<%- include('header')%>

<div class="box" id="heading">
    <h1><%= title%></h1>
</div>

    <div class="box">
        <% for (let i=0; i<newTasks.length; i++){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= newTasks[i]._id %>" onChange="this.form.submit()">
                    <p><%= newTasks[i].name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= title%>""></input>
            </form>
        <% } %>
            

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= title%>">+</button>
        </form>
    </div>
        
<!-- to include footer -->
<%- include('footer')%>